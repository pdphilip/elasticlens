{
  "name": "pdphilip/elasticlens",
  "description": "Search your Laravel models with the convenience of Eloquent and the power of Elasticsearch",
  "keywords": [
    "PDPhilip",
    "laravel",
    "Elasticsearch",
    "Eloquent",
    "elasticlens"
  ],
  "homepage": "https://github.com/pdphilip/elasticlens",
  "license": "MIT",
  "authors": [
    {
      "name": "David Philip",
      "email": "pd.philip@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/contracts": "^10.0||^11.0||^12.0",
    "pdphilip/elasticsearch": "^5.0.2",
    "pdphilip/omniterm": "^2",
    "spatie/laravel-package-tools": "^1.16"
  },
  "require-dev": {
    "laravel/pint": "^1.14",
    "larastan/larastan": "^3",
    "nunomaduro/collision": "^8.1.1||^7.10.0",
    "orchestra/testbench": "^10.1||^9.0.0",
    "pestphp/pest": "^3",
    "pestphp/pest-plugin-arch": "^3",
    "pestphp/pest-plugin-laravel": "^3",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan-deprecation-rules": "^2",
    "phpstan/phpstan-phpunit": "^2"
  },
  "autoload": {
    "psr-4": {
      "PDPhilip\\ElasticLens\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PDPhilip\\ElasticLens\\Tests\\": "tests/",
      "Workbench\\App\\": "workbench/app/"
    }
  },
  "scripts": {
    "post-autoload-dump": "@composer run prepare",
    "clear": "@php vendor/bin/testbench package:purge-elasticlens --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "build": [
      "@composer run prepare",
      "@php vendor/bin/testbench workbench:build --ansi"
    ],
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "@composer run build",
      "@php vendor/bin/testbench serve"
    ],
    "types": "phpstan analyse --ansi --memory-limit=2G",
    "lint": "pint -v",
    "pest": "pest --colors=always",
    "test-coverage": "pest --coverage",
    "test:lint": "pint --test -v",
    "test:types": "@types",
    "test:unit": "pest --colors=always",
    "test": [
      "@test:lint",
      "@test:types",
      "@test:unit"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true,
      "php-http/discovery": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "PDPhilip\\ElasticLens\\ElasticLensServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
